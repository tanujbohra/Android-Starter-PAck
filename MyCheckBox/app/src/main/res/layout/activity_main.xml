<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tanuj.mycheckbox.MainActivity">

    <CheckBox
        android:id="@+id/tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:onClick="onClicked"
        android:text="@string/tea" />

    <CheckBox
        android:id="@+id/milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tea"
        android:layout_alignRight="@+id/tea"
        android:layout_below="@+id/tea"
        android:layout_marginTop="45dp"
        android:onClick="onClicked"
        android:text="@string/milk" />

    <TextView
        android:id="@+id/myText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tea"
        android:layout_alignStart="@+id/tea"
        android:layout_below="@+id/milk"
        android:layout_marginTop="106dp"
        android:text=""
        android:textSize="12sp" />
</RelativeLayout>
